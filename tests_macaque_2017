TARG=/tmp/macaque/
mkdir -p ${TARG}

SRC=/data/garethb/macaques/forRichard/
SRC=${HOME}/cv41_scratch/MCRI/forRichard
for i in ${SRC}/*denoised.nii ; do
    b=$(basename $i)
    b=${b/.nii/}
    ./Build/MBWSS-build/bin/scalperWSMacaque --debug -i $i -o ${TARG}/${b}  --refine --smoothGradSigma 1.0 --threads 4 --markerdilate 1 --preopening 1
done

for i in ${SRC}/*denoised.nii ; do
    b=$(basename $i)
    b=${b/.nii/}
    #fslview $i ${TARG}/${b}_zmask
    fslview $i ${TARG}/${b}_eyeclosed ${TARG}/${b}_zmask
done
